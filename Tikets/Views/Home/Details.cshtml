@{
    ViewData["Title"] = "Details Page";
}
@model Movie
<div class="container my-5">
    <div class="row">
        <div class="col-md-6 d-flex align-items-center justify-content-center position-relative">
            <a href="#Trailer" class="position-absolute p-0" style="top:88%; right:50; right:15%">
                <i class="fa-brands fa-youtube btn btn-danger fs-1" style="border-radius:40%;"></i></a>
            @if (Model.MovieStatus == MovieStatus.Expired)
            {
                <p class="bg-danger position-absolute px-2 rounded text-light" style="top:3%;left:17%">@Model.MovieStatus</p>
            }
            else if (Model.MovieStatus == MovieStatus.Upcoming)
            {
                <p class="bg-warning position-absolute px-2 rounded text-light" style="top:3%;left:17%">
                    @Model.MovieStatus
                </p>
            }
            else

            {
                <p class="bg-success position-absolute px-2 rounded text-light" style="top:3%;left:17%">
                    @Model.MovieStatus
                </p>
            }
            <img src="~/images/movies/@Model.ImgUrl" class="img-fluid w-75 " alt="" style="max-height: 500px;">
        </div>
        <div class="col-md-6 d-flex align-items-center">
            <div>
                <h3 class="text-dark">@Model.Name</h3>
                <p class="text-secondary">Category: <strong>@Model.Category.Name</strong></p>
                <p class="text-secondary">Cinema: <strong>@Model.Cinema.Name</strong></p>
                <p class="text-secondary">Price: <strong>@Model.Price</strong></p>
                <p class="mt-2 text-secondary">@Model.Description</p>
                <p class="mt-2 text-secondary">
                    Actores: @foreach (var m in Model.ActorMovies)
                    {
                        <img src="~/images/cast/@m.Actor.PorfilePicture" class="ms-2" />
                    }
                </p>
                <a href="#" class="btn btn-primary mt-3">احجز الآن</a>
            </div>
        </div>
    </div>
    <hr class="my-5" />
    <div class="w-50 mx-auto text-center shadow py-2 px-4 rounded-2 border mb-4"><h1 class="text-dark">Trailer</h1></div>
    <div class="d-flex justify-content-center mt-5 rounded" id="Trailer">
        <iframe width="640" height="360" style=" box-shadow: 0rem 0rem 2rem black;"
                src="https://www.youtube.com/embed/@Model.TrailerUrl"
                frameborder="0"
                allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen>
        </iframe>

    </div>
</div>

<style>
    body {
        background-color: #f8f9fa; /* لون الخلفية */
    }

    .img-fluid {
        height: auto;
        max-height: 500px;
        box-shadow: 0rem 0rem 2rem black;
        border-radius: 2rem;
    }

    h1 {
        color: #007bff; /* لون أزرق */
    }

    .text-secondary {
        color: #6c757d; /* لون رمادي */
    }

    .btn-primary {
        background-color: #007bff; /* لون أزرق */
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3; /* لون أزرق داكن عند التمرير */
            border-color: #0056b3;
        }
</style>

